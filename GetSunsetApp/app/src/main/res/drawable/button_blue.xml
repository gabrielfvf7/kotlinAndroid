<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#70C656"/>
            <stroke android:color="#53933F"
                android:width="2dp" />
            <corners android:radius="15dp"/>
            <padding android:bottom="3pt" android:top="3pt" android:right="3pt" android:left="3pt" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" />
            <stroke android:color="#53933F"
                android:width="2dp" />
            <corners android:radius="15dp"/>
            <padding android:bottom="3pt" android:top="3pt" android:right="3pt" android:left="3pt" />

        </shape>
    </item>
</selector>